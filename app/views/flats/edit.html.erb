  <div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Edit your Flat</h1>
      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.button :submit, class: 'btn btn-light' %>
      <% end %>
      <div class=mt-3> <%= link_to "Back Home", flat_path(@flat) %> </div>
    </div>
  </div>
</div>
